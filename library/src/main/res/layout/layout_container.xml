<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:orientation="horizontal"
        android:layout_centerHorizontal="true"
        android:layout_width="wrap_content"
        android:layout_height="match_parent">
        <se.emilsjolander.flipview.FlipView
            android:layout_marginLeft="5dp"
            android:id="@+id/hour_tens"
            android:layout_width="30dp"
            android:layout_height="wrap_content" />
        <se.emilsjolander.flipview.FlipView
            android:layout_marginLeft="5dp"
            android:id="@+id/hour_digit"
            android:layout_width="30dp"
            android:layout_height="wrap_content" />
        <TextView
            android:layout_marginLeft="5dp"
            android:id="@+id/hour_minute_suffix"
            android:text=":"
            android:textStyle="bold"
            android:textColor="#000"
            android:layout_gravity="center_vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <se.emilsjolander.flipview.FlipView
            android:layout_marginLeft="5dp"
            android:id="@+id/minute_tens"
            android:layout_width="30dp"
            android:layout_height="wrap_content"
            />
        <se.emilsjolander.flipview.FlipView
            android:layout_marginLeft="5dp"
            android:id="@+id/minute_digit"
            android:layout_width="30dp"
            android:layout_height="wrap_content"
            />
        <TextView
            android:layout_marginLeft="5dp"
            android:id="@+id/minute_second_suffix"
            android:text=":"
            android:textStyle="bold"
            android:textColor="#000"
            android:layout_gravity="center_vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <se.emilsjolander.flipview.FlipView
            android:layout_marginLeft="5dp"
            android:id="@+id/second_tens"
            android:layout_width="30dp"
            android:layout_height="wrap_content"
            />
        <se.emilsjolander.flipview.FlipView
            android:layout_marginLeft="5dp"
            android:id="@+id/second_digit"
            android:layout_width="30dp"
            android:layout_height="wrap_content" />
</LinearLayout>